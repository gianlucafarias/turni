---
interface Props {
  name: string;
  description?: string;
  location?: string;
  whatsappUrl?: string;
  twitterUrl?: string;
  bannerUrl?: string;
  profileUrl?: string;
}

const { 
  name, 
  description, 
  location, 
  whatsappUrl, 
  twitterUrl,
  bannerUrl,
  profileUrl
} = Astro.props;
---

<header class="relative">
  <!-- Banner -->
  <div class="h-48 rounded-b-3xl z-0 overflow-hidden">
    {bannerUrl ? (
      <img 
        src={bannerUrl} 
        alt={`Banner de ${name}`} 
        class="w-full h-full object-cover"
      />
    ) : (
      <div class="w-full h-full bg-gradient-to-r from-purple-500 to-purple-600"></div>
    )}
  </div>
  
  <!-- Store Info -->
  <div class="container mx-auto px-4">
    <div class="relative -mt-16 flex items-end space-x-4">
      <!-- Avatar -->
      <div class="w-32 h-32 rounded-full bg-white shadow-lg overflow-hidden">
        <img
          src={profileUrl || `https://ui-avatars.com/api/?name=${encodeURIComponent(name)}&background=6D28D9&color=fff`}
          alt={name}
          class="w-full h-full object-cover"
        />
      </div>

      <!-- Info -->
      <div class="flex-1 pb-4">
        <h1 class="text-2xl font-bold text-gray-900">{name}</h1>
        {description && <p class="text-gray-600">{description}</p>}
        {location && (
          <div class="flex items-center mt-1 text-gray-500">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
            </svg>
            <span class="text-sm">{location}</span>
          </div>
        )}

        <!-- Social Links -->
        <div class="flex space-x-2 mt-2">
          {whatsappUrl && (
            <a
              href={`https://wa.me/${whatsappUrl}`}
              target="_blank"
              rel="noopener noreferrer"
              class="p-2 text-green-600 hover:bg-green-50 rounded-full transition-colors"
              title="Contactar por WhatsApp"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/>
              </svg>
            </a>
          )}
          {twitterUrl && (
            <a
              href={twitterUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="p-2 text-blue-400 hover:bg-blue-50 rounded-full transition-colors"
              title="Seguir en Twitter"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
              </svg>
            </a>
          )}
        </div>
      </div>
    </div>
  </div>
</header> 