---
interface Props {
  id: string;
  storeId?: string;
  name: string;
  price: number;
  imageUrl?: string;
  description?: string;
  stock?: number;
  active?: boolean;
}

const {
  id,
  storeId = 'store',
  name,
  price,
  imageUrl,
  description,
  stock = 0,
  active = false
} = Astro.props;
---

<div class="group relative">
  <div class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-md bg-gray-200 lg:aspect-none group-hover:opacity-75 lg:h-80">
    <a href={`/${storeId}/${id}`}>
      <img
        src={imageUrl || '/placeholder.png'}
        alt={name}
        class="h-full w-full object-cover object-center lg:h-full lg:w-full"
      />
    </a>
  </div>
  <div class="mt-4 flex justify-between">
    <div>
      <h3 class="text-sm text-gray-700">
        <a href={`/${storeId}/${id}`}>
          <span aria-hidden="true" class="absolute inset-0"></span>
          {name}
        </a>
      </h3>
      {description && (
        <p class="mt-1 text-sm text-gray-500">{description}</p>
      )}
    </div>
    <p class="text-sm font-medium text-gray-900">${price}</p>
  </div>

  {active && stock > 0 && (
    <button
      class="mt-4 w-full bg-indigo-600 text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-indigo-700 transition-colors"
      onclick={`
        const event = new CustomEvent('add-to-cart', {
          detail: {
            id: '${id}',
            name: '${name}',
            price: ${price},
            image_url: '${imageUrl || '/placeholder.png'}'
          }
        });
        document.dispatchEvent(event);
      `}
    >
      Agregar al carrito
    </button>
  )}

  {(!active || stock === 0) && (
    <div class="mt-4 w-full bg-gray-200 text-gray-500 px-4 py-2 rounded-md text-sm font-medium text-center">
      No disponible
    </div>
  )}
</div> 