---
interface Props {
    categoriaId: number;
    subcategorias: string[];
    selectedSubcategoria?: string;
    className?: string;
}

const { categoriaId, subcategorias, selectedSubcategoria, className = "" } = Astro.props;
---

<div class={`flex flex-wrap gap-2 ${className}`}>
    <a 
        href={`/categoria/${categoriaId}`}
        class={`px-4 py-2 rounded-full transition-colors ${
            !selectedSubcategoria 
                ? 'bg-indigo-100 text-indigo-700' 
                : 'bg-gray-100 text-gray-700 hover:bg-indigo-50 hover:text-indigo-600'
        }`}
    >
        Todos
    </a>
    {subcategorias.map(sub => (
        <a 
            href={`/categoria/${categoriaId}/${sub.toLowerCase()}`}
            class={`px-4 py-2 rounded-full transition-colors ${
                selectedSubcategoria === sub.toLowerCase()
                    ? 'bg-indigo-100 text-indigo-700'
                    : 'bg-gray-100 text-gray-700 hover:bg-indigo-50 hover:text-indigo-600'
            }`}
        >
            {sub}
        </a>
    ))}
</div> 