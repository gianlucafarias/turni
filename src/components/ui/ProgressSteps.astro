---
interface Step {
    id: number;
    name: string;
    description: string;
}

interface Props {
    steps: Step[];
    currentStep: number;
}

const { steps, currentStep } = Astro.props;
---

<div class="py-4">
    <div class="max-w-4xl mx-auto">
        <nav aria-label="Progress">
            <ol role="list" class="flex items-center">
                {steps.map((step, index) => (
                    <li class={`relative ${index === steps.length - 1 ? 'flex-1' : 'flex-1'}`}>
                        {index !== steps.length - 1 && (
                            <div class="absolute inset-0 flex items-center" aria-hidden="true">
                                <div class={`h-0.5 w-full ${index < currentStep - 1 ? 'bg-indigo-600' : 'bg-gray-200'}`}></div>
                            </div>
                        )}
                        <div class="relative flex flex-col items-center group">
                            <span class={`h-10 w-10 flex items-center justify-center rounded-full border-2 
                                ${index < currentStep ? 'border-indigo-600 bg-indigo-600 text-white' : 
                                  index === currentStep ? 'border-indigo-600 bg-white text-indigo-600' : 
                                  'border-gray-300 bg-white text-gray-500'}`}>
                                {index < currentStep ? (
                                    <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                    </svg>
                                ) : (
                                    <span>{step.id}</span>
                                )}
                            </span>
                            <div class="mt-2 text-center">
                                <span class="text-sm font-medium text-gray-900">{step.name}</span>
                                <p class="text-xs text-gray-500">{step.description}</p>
                            </div>
                        </div>
                    </li>
                ))}
            </ol>
        </nav>
    </div>
</div> 