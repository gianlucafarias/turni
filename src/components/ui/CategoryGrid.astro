---
import type { Categoria } from '../../types';

interface Props {
    categorias: Categoria[];
    className?: string;
}

const { categorias, className = "" } = Astro.props;
---

<div class={`grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4 ${className}`}>
    {categorias.map(categoria => (
        <a 
            href={`/categoria/${categoria.id}`}
            class={`${categoria.color} rounded-2xl p-6 text-center transition-all hover:shadow-lg hover:scale-105 group`}
        >
            <span class="text-4xl mb-3 block">{categoria.icono}</span>
            <h3 class="text-lg font-medium text-gray-900 group-hover:text-indigo-600 mb-2">
                {categoria.nombre}
            </h3>
            <p class="text-sm text-gray-500">
                {categoria.subcategorias?.length} subcategor√≠as
            </p>
        </a>
    ))}
</div> 