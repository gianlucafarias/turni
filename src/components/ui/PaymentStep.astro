---
import Button from './Button.astro';
import PaymentSummary from './PaymentSummary.astro';
import MercadoPagoCheckout from './MercadoPagoCheckout.astro';
import { createPreference } from '../../services/mercadopago';

export interface Props {
    productData: {
        nombre: string;
        precio: number;
    };
    planData: {
        nombre: string;
        precio: number;
    };
    whatsappNumber: string;
}

const { productData, planData, whatsappNumber } = Astro.props;
---

<div class="space-y-8">
    <h2 class="text-3xl font-bold text-center">Finalizar Publicación</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Resumen y Opciones de Pago -->
        <div class="space-y-6">
            <PaymentSummary
                productName={productData.nombre}
                productPrice={productData.precio}
                planName={planData.nombre}
                planPrice={planData.precio}
                paymentMethod="efectivo"
            />

            <!-- Opciones de Pago -->
            <div class="bg-white rounded-xl p-6 shadow-lg">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Método de Pago</h3>
                <div class="space-y-4">
                    <div class="grid grid-cols-2 gap-4">
                        <button
                            id="whatsapp-payment"
                            class="flex flex-col items-center p-4 border-2 border-gray-200 rounded-lg hover:border-green-500 transition-colors"
                        >
                            <svg class="w-8 h-8 text-green-500 mb-2" fill="currentColor" viewBox="0 0 24 24">
                                <!-- WhatsApp icon -->
                            </svg>
                            <span class="font-medium">Pagar por WhatsApp</span>
                            <span class="text-sm text-gray-500">Coordinar pago directamente</span>
                        </button>

                        <button
                            id="mp-payment"
                            class="flex flex-col items-center p-4 border-2 border-gray-200 rounded-lg hover:border-blue-500 transition-colors"
                        >
                            <img src="/mercadopago-logo.png" alt="Mercado Pago" class="h-8 mb-2">
                            <span class="font-medium">Pagar con Mercado Pago</span>
                            <span class="text-sm text-gray-500">Tarjetas, transferencia y más</span>
                        </button>
                    </div>

                    <!-- Contenedor para el checkout de Mercado Pago -->
                    <div id="mp-checkout-container" class="hidden"></div>
                </div>
            </div>
        </div>

        <!-- Información Adicional y Botón de Pago -->
        <div class="space-y-6">
            <div class="bg-white rounded-xl p-6 shadow-lg">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Información Importante</h3>
                <ul class="space-y-4">
                    <li class="flex items-start">
                        <svg class="h-6 w-6 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                        <span class="text-gray-600">Tu publicación estará activa inmediatamente después del pago</span>
                    </li>
                    <li class="flex items-start">
                        <svg class="h-6 w-6 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                        <span class="text-gray-600">Soporte prioritario vía WhatsApp</span>
                    </li>
                    <li class="flex items-start">
                        <svg class="h-6 w-6 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                        <span class="text-gray-600">Puedes modificar tu publicación en cualquier momento</span>
                    </li>
                </ul>
            </div>

            <Button
                type="button"
                variant="success"
                size="lg"
                fullWidth={true}
                action={{
                    type: 'INICIAR_PAGO',
                    payload: {
                        whatsappNumber
                    }
                }}
            >
                <div class="flex items-center justify-center gap-2">
                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/>
                    </svg>
                    <span>Iniciar Pago por WhatsApp</span>
                </div>
            </Button>

            <p class="text-center text-sm text-gray-500">
                Al hacer clic en "Iniciar Pago" serás redirigido a WhatsApp para coordinar el pago
            </p>
        </div>
    </div>
</div> 

<script>
    const whatsappBtn = document.getElementById('whatsapp-payment');
    const mpBtn = document.getElementById('mp-payment');
    const mpContainer = document.getElementById('mp-checkout-container');

    whatsappBtn?.addEventListener('click', () => {
        // Mostrar opciones de WhatsApp
        mpContainer?.classList.add('hidden');
        // ... resto del código para WhatsApp
    });

    mpBtn?.addEventListener('click', async () => {
        try {
            // Obtener preferencia de Mercado Pago
            const response = await fetch('/api/mercadopago/create-preference', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    plan: planData,
                    productData,
                    paymentMethod: document.querySelector('input[name="paymentMethod"]:checked')?.value
                })
            });

            const { id: preferenceId } = await response.json();
            
            // Mostrar checkout de Mercado Pago
            mpContainer?.classList.remove('hidden');
            
            // Inicializar checkout
            const mp = new MercadoPago(import.meta.env.PUBLIC_MERCADOPAGO_PUBLIC_KEY);
            mp.checkout({
                preference: {
                    id: preferenceId
                },
                render: {
                    container: '#mp-checkout-container',
                    label: 'Pagar con Mercado Pago',
                }
            });
        } catch (error) {
            console.error('Error al iniciar el pago:', error);
            alert('Error al iniciar el pago. Por favor intente nuevamente.');
        }
    });
</script> 