---
import type { ButtonProps } from '../../types/button';

const {
    type = 'button',
    variant = 'primary',
    size = 'md',
    fullWidth = false,
    disabled = false,
    loading = false,
    icon,
    className = '',
    id,
    action
} = Astro.props as ButtonProps;

const variants = {
    primary: 'bg-indigo-600 text-white hover:bg-indigo-700 focus:ring-indigo-500',
    secondary: 'bg-gray-200 text-gray-700 hover:bg-gray-300 focus:ring-gray-500',
    danger: 'bg-red-600 text-white hover:bg-red-700 focus:ring-red-500',
    success: 'bg-green-600 text-white hover:bg-green-700 focus:ring-green-500',
    warning: 'bg-yellow-500 text-white hover:bg-yellow-600 focus:ring-yellow-500'
};

const sizes = {
    sm: 'px-3 py-1.5 text-sm',
    md: 'px-4 py-2',
    lg: 'px-6 py-3 text-lg'
};
---

<button
    type={type}
    disabled={disabled || loading}
    id={id}
    data-action={action ? JSON.stringify(action) : undefined}
    class:list={[
        'rounded-xl font-medium transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2',
        variants[variant],
        sizes[size],
        fullWidth && 'w-full',
        (disabled || loading) && 'opacity-50 cursor-not-allowed',
        'transform active:scale-95',
        className
    ]}
>
    <div class="flex items-center justify-center gap-2">
        {loading && (
            <svg class="animate-spin h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
        )}
        {icon && !loading && <span set:html={icon} />}
        <slot />
    </div>
</button>

<script>
    import { handleButtonAction } from '../../utils/buttonActions';

    document.addEventListener('click', async (e) => {
        const target = e.target as HTMLElement;
        const button = target.closest('[data-action]') as HTMLButtonElement;
        
        if (!button) return;

        let originalContent = '';
        try {
            const action = JSON.parse(button.dataset.action || '{}');
            if (!action.type) return;

            // Prevenir múltiples clicks
            if (button.dataset.processing === 'true') return;
            
            // Marcar el botón como procesando
            button.dataset.processing = 'true';
            button.disabled = true;
            
            // Guardar el contenido original
            const originalContent = button.innerHTML;
            
            // Mostrar estado de carga
            button.innerHTML = `
                <div class="flex items-center gap-2">
                    <svg class="animate-spin h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                    <span>Procesando...</span>
                </div>
            `;

            // Ejecutar la acción
            await handleButtonAction(action);

            // Restaurar el botón
            setTimeout(() => {
                button.innerHTML = originalContent;
                button.dataset.processing = 'false';
                button.disabled = false;
            }, 500);
        } catch (error) {
            console.error('Error al procesar la acción del botón:', error);
            button.innerHTML = originalContent;
            button.dataset.processing = 'false';
            button.disabled = false;
        }
    });
</script> 