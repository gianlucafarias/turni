---
interface Props {
    placeholder?: string;
    className?: string;
}

const { 
    placeholder = "¿Qué estás buscando?",
    className = ""
} = Astro.props;
---

<div class={`relative ${className}`}>
    <div class="relative">
        <input 
            type="search" 
            id="search-input"
            placeholder={placeholder}
            class="w-full px-12 py-4 text-lg border-2 border-gray-200 rounded-xl focus:outline-none focus:border-indigo-500 transition-colors"
        />
        <svg 
            class="w-6 h-6 text-gray-400 absolute left-4 top-1/2 -translate-y-1/2" 
            fill="none" 
            stroke="currentColor" 
            viewBox="0 0 24 24"
        >
            <path 
                stroke-linecap="round" 
                stroke-linejoin="round" 
                stroke-width="2" 
                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
            />
        </svg>
        <button 
            type="button"
            id="clear-search"
            class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600 hidden"
        >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path 
                    stroke-linecap="round" 
                    stroke-linejoin="round" 
                    stroke-width="2" 
                    d="M6 18L18 6M6 6l12 12"
                />
            </svg>
        </button>
    </div>

    <!-- Resultados de búsqueda -->
    <div 
        id="search-results" 
        class="absolute z-50 w-full mt-2 bg-white rounded-xl shadow-lg border border-gray-200 hidden"
    >
        <div class="p-4">
            <div id="results-content" class="space-y-4">
                <!-- Los resultados se insertarán aquí dinámicamente -->
            </div>
        </div>
    </div>
</div>

<script>
    import { searchProducts } from '../../utils/search';
    import { debounce } from '../../utils/helpers';

    const searchInput = document.getElementById('search-input') as HTMLInputElement;
    const searchResults = document.getElementById('search-results');
    const resultsContent = document.getElementById('results-content');
    const clearButton = document.getElementById('clear-search');

    if (searchInput && searchResults && resultsContent && clearButton) {
        // Manejar la búsqueda con debounce
        const handleSearch = debounce((query: string) => {
            if (query.length < 2) {
                searchResults.classList.add('hidden');
                return;
            }

            const results = searchProducts(query);
            
            if (results.length === 0) {
                resultsContent.innerHTML = `
                    <div class="text-center text-gray-500 py-4">
                        No se encontraron resultados para "${query}"
                    </div>
                `;
            } else {
                resultsContent.innerHTML = results.slice(0, 5).map(product => `
                    <a 
                        href="/product/${product.id}" 
                        class="flex items-center gap-4 p-2 hover:bg-gray-50 rounded-lg group"
                    >
                        <img 
                            src="${product.imagen}" 
                            alt="${product.nombre}"
                            class="w-16 h-16 object-cover rounded-lg"
                        />
                        <div class="flex-1">
                            <h4 class="font-medium text-gray-900 group-hover:text-indigo-600">
                                ${product.nombre}
                            </h4>
                            <p class="text-sm text-gray-500">${product.categoria}</p>
                            <p class="text-sm font-medium text-gray-900">$${product.precio}</p>
                        </div>
                    </a>
                `).join('');
            }

            searchResults.classList.remove('hidden');
        }, 300);

        // Event listeners
        searchInput.addEventListener('input', (e) => {
            const query = (e.target as HTMLInputElement).value;
            clearButton.classList.toggle('hidden', !query);
            handleSearch(query);
        });

        clearButton.addEventListener('click', () => {
            searchInput.value = '';
            searchResults.classList.add('hidden');
            clearButton.classList.add('hidden');
            searchInput.focus();
        });

        // Cerrar resultados al hacer clic fuera
        document.addEventListener('click', (e) => {
            if (!searchInput.contains(e.target as Node)) {
                searchResults.classList.add('hidden');
            }
        });

        // Navegación con teclado
        searchInput.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                searchResults.classList.add('hidden');
            }
        });
    }
</script> 