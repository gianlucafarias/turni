---
interface Props {
	producto: {
		id: number;
		nombre: string;
		precio: number;
		imagen: string;
		categoria: string;
		etiqueta?: string;
	}
}

const { producto } = Astro.props;
---

<div class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300">
	<div class="relative">
		{producto.etiqueta && (
			<span class="absolute top-2 right-2 bg-indigo-600 text-white px-2 py-1 rounded-full text-sm">
				{producto.etiqueta}
			</span>
		)}
		<img src={producto.imagen} 
			 alt={producto.nombre}
			 class="w-full h-48 object-cover rounded-t-lg"
		/>
	</div>
	<div class="p-4">
		<h3 class="text-lg font-medium text-gray-900">{producto.nombre}</h3>
		<p class="text-gray-500 text-sm">{producto.categoria}</p>
		<div class="mt-2 flex justify-between items-center">
			<span class="text-lg font-bold">${producto.precio}</span>
			<button class="bg-indigo-600 text-white px-3 py-1 rounded-md hover:bg-indigo-700 text-sm">
				Agregar
			</button>
		</div>
	</div>
</div>
