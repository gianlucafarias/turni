import PublicLayout from '../layouts/PublicLayout.astro';
import BookingWidget from '../components/public/BookingWidget';
import ProductStore from '../components/public/ProductStore';
import { supabase } from '../lib/supabase';
import { getGoogleMapsUrl } from '../utils/maps';
import { formatScheduleHTML } from '../utils/scheduleFormatter';
import { getBusinessCategoryName } from '../utils/businessCategories';

const { storeId } = Astro.params;

// Buscar tienda por ID o por slug
let store = null;

const uuidRegex = /^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$/i;
if (uuidRegex.test(storeId || '')) {
  const { data } = await supabase
    .from('stores')
    .select('*')
    .eq('id', storeId)
    .single();
  store = data;
} else {
  const { data } = await supabase
    .from('stores')
    .select('*')
    .eq('slug', storeId)
    .single();
  store = data;
}

if (!store) {
  return Astro.redirect('/404');
}

// Obtener productos si es tienda de productos
let products: any[] = [];
let categories: any[] = [];
if (store.store_type === 'products') {
  const [productsRes, categoriesRes] = await Promise.all([
    supabase
      .from('products')
      .select('*')
      .eq('store_id', store.id)
      .eq('active', true)
      .order('created_at', { ascending: false }),
    supabase
      .from('categories')
      .select('id, name')
      .eq('store_id', store.id)
      .order('name')
  ]);
  
  products = productsRes.data || [];
  categories = categoriesRes.data || [];
}

const isAppointments = store.store_type === 'appointments';
const galleryImages = store.gallery_images || [];
const hasGallery = galleryImages.length > 0;

// Cargar sucursales activas
let branches: any[] = [];
try {
  const { data: branchesData } = await supabase
    .from('branches')
    .select('*')
    .eq('store_id', store.id)
    .eq('is_active', true)
    .order('display_order', { ascending: true })
    .order('created_at', { ascending: true });
  
  branches = branchesData || [];
} catch (error) {
  console.error('Error cargando sucursales:', error);
  branches = [];
}

// Cargar horarios configurados
let schedules: any[] = [];
try {
  const { data: schedulesData } = await supabase
    .from('schedules')
    .select('*')
    .eq('store_id', store.id)
    .eq('enabled', true)
    .order('day', { ascending: true });
  
  schedules = schedulesData || [];
} catch (error) {
  console.error('Error cargando horarios:', error);
  schedules = [];
}

