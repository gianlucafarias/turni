<script is:inline>
  // Carrusel de galería horizontal deslizable
  document.addEventListener('DOMContentLoaded', function() {
    const carousel = document.getElementById('gallery-carousel');
    const indicators = document.querySelectorAll('.gallery-indicator');
    const slides = document.querySelectorAll('.gallery-slide');
    
    if (!carousel || indicators.length === 0) return;
    
    function getSlideWidth() {
      // Cada slide tiene width: calc(100% - 3rem), así que calculamos el ancho real
      const containerWidth = carousel.offsetWidth;
      return containerWidth - 48; // 3rem = 48px
    }
    
    function updateIndicators() {
      const scrollLeft = carousel.scrollLeft;
      const slideWidth = getSlideWidth();
      const gap = 16; // gap-4 = 16px
      const totalWidth = slideWidth + gap;
      const currentIndex = Math.round(scrollLeft / totalWidth);
      
      indicators.forEach((indicator, i) => {
        if (i === currentIndex) {
          indicator.classList.remove('bg-stone-300', 'w-2');
          indicator.classList.add('bg-indigo-600', 'w-6');
        } else {
          indicator.classList.remove('bg-indigo-600', 'w-6');
          indicator.classList.add('bg-stone-300', 'w-2');
        }
      });
    }
    
    function goToSlide(index) {
      if (index < 0 || index >= slides.length) return;
      const slideWidth = getSlideWidth();
      const gap = 16;
      const totalWidth = slideWidth + gap;
      carousel.scrollTo({
        left: index * totalWidth,
        behavior: 'smooth'
      });
    }
    
    // Click en slides para navegar
    slides.forEach((slide, index) => {
      slide.addEventListener('click', (e) => {
        e.preventDefault();
        const scrollLeft = carousel.scrollLeft;
        const slideWidth = getSlideWidth();
        const gap = 16;
        const totalWidth = slideWidth + gap;
        const currentIndex = Math.round(scrollLeft / totalWidth);
        
        // Si clickeamos en el slide actual, ir al siguiente
        if (index === currentIndex && index < slides.length - 1) {
          goToSlide(index + 1);
        } else if (index !== currentIndex) {
          goToSlide(index);
        }
      });
    });
    
    // Click en indicadores para navegar
    indicators.forEach((indicator, index) => {
      indicator.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        goToSlide(index);
      });
    });
    
    // Actualizar indicadores al hacer scroll
    carousel.addEventListener('scroll', updateIndicators, { passive: true });
    
    // Inicializar
    updateIndicators();
    
    // Recalcular en resize
    let resizeTimeout;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimeout);
      resizeTimeout = setTimeout(() => {
        updateIndicators();
      }, 100);
    });
  });
  
  // Botón de scroll a reservar turno - Ejecutar siempre, fuera del bloque del carousel
  // Usar múltiples formas de asegurar que se ejecute
  function initScrollButton() {
    const scrollBtn = document.getElementById('scroll-to-booking-btn-mobile');
    const target = document.getElementById('reservar-turno');
    
    if (scrollBtn && target) {
      // Remover listener anterior si existe
      scrollBtn.removeEventListener('click', handleScrollClick);
      // Agregar nuevo listener
      scrollBtn.addEventListener('click', handleScrollClick);
    }
  }
  
  function handleScrollClick(e) {
    e.preventDefault();
    e.stopPropagation();
    const target = document.getElementById('reservar-turno');
    if (target) {
      // Calcular posición considerando navbar sticky
      const navbar = document.querySelector('nav');
      const navbarHeight = navbar ? navbar.offsetHeight : 0;
      const targetPosition = target.getBoundingClientRect().top + window.pageYOffset - navbarHeight - 20;
      
      window.scrollTo({
        top: targetPosition,
        behavior: 'smooth'
      });
    }
  }
  
  // Intentar inicializar inmediatamente
  initScrollButton();
  
  // También intentar cuando el DOM esté listo
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initScrollButton);
  } else {
    // DOM ya está listo
    initScrollButton();
  }
  
  // También intentar después de un pequeño delay por si acaso
  setTimeout(initScrollButton, 100);
  setTimeout(initScrollButton, 500);
</script>


