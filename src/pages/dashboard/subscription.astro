---
// =============================================================================
// Página de Suscripción en el Dashboard
// Muestra el panel de gestión de suscripción
// =============================================================================

import DashboardLayout from '../../layouts/DashboardLayout.astro';
import { SubscriptionPanel } from '../../components/dashboard/SubscriptionPanel';

// Verificar parámetros de callback de MP
const status = Astro.url.searchParams.get('status');
const callbackMessage = status === 'callback' 
  ? 'Procesando tu suscripción...' 
  : status === 'approved'
  ? '¡Suscripción activada correctamente!'
  : status === 'pending'
  ? 'Tu suscripción está pendiente de pago'
  : status === 'failure'
  ? 'Hubo un problema con el pago. Intentá nuevamente.'
  : null;
---

<DashboardLayout title="Suscripción - Tiendita">
  <div class="max-w-4xl mx-auto py-8 px-4">
    <div class="mb-8">
      <h1 class="text-2xl font-bold text-gray-900">Mi Plan</h1>
      <p class="text-gray-600 mt-1">Gestioná tu plan y facturación</p>
    </div>

    {callbackMessage && (
      <div class={`mb-6 p-4 rounded-lg ${
        status === 'approved' 
          ? 'bg-green-50 border border-green-200 text-green-800'
          : status === 'failure'
          ? 'bg-red-50 border border-red-200 text-red-800'
          : 'bg-blue-50 border border-blue-200 text-blue-800'
      }`}>
        <div class="flex items-center gap-3">
          {status === 'approved' && (
            <svg class="w-5 h-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          )}
          {status === 'failure' && (
            <svg class="w-5 h-5 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          )}
          {(status === 'callback' || status === 'pending') && (
            <svg class="w-5 h-5 text-blue-600 animate-spin" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
          )}
          <span class="font-medium">{callbackMessage}</span>
        </div>
      </div>
    )}

    <!-- El componente maneja la autenticación del lado del cliente -->
    <SubscriptionPanel client:load />
  </div>
</DashboardLayout>

<script>
  // Si estamos en callback, refrescar la página después de unos segundos
  // para obtener el estado actualizado del webhook
  const urlParams = new URLSearchParams(window.location.search);
  if (urlParams.get('status') === 'callback') {
    setTimeout(() => {
      window.location.href = window.location.pathname;
    }, 3000);
  }
</script>

