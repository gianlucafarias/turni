---
import PublicLayout from '../../layouts/PublicLayout.astro';
import { supabase } from '../../lib/supabase';

const { storeId, productId } = Astro.params;

// Buscar tienda por ID o por slug
let store = null;
const uuidRegex = /^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$/i;

if (uuidRegex.test(storeId || '')) {
  const { data } = await supabase
    .from('stores')
    .select('*')
    .eq('id', storeId)
    .single();
  store = data;
} else {
  const { data } = await supabase
    .from('stores')
    .select('*')
    .eq('slug', storeId)
    .single();
  store = data;
}

if (!store) {
  return Astro.redirect('/404');
}

// Obtener el producto
const { data: product } = await supabase
  .from('products')
  .select('*')
  .eq('id', productId)
  .eq('store_id', store.id)
  .single();

if (!product) {
  return Astro.redirect(`/${storeId}`);
}

// Obtener categoría si tiene
let categoryName = null;
if (product.category_id) {
  const { data: category } = await supabase
    .from('categories')
    .select('name')
    .eq('id', product.category_id)
    .single();
  categoryName = category?.name;
}

// Obtener productos relacionados (misma categoría)
let relatedProducts: any[] = [];
if (product.category_id) {
  const { data } = await supabase
    .from('products')
    .select('*')
    .eq('store_id', store.id)
    .eq('category_id', product.category_id)
    .eq('active', true)
    .neq('id', product.id)
    .limit(4);
  relatedProducts = data || [];
}

const storeUrl = store.slug || store.id;
---

<PublicLayout title={`${product.name} | ${store.name}`}>
  <div class="min-h-screen bg-stone-50">
    
    {/* Breadcrumb */}
    <div class="bg-white border-b">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 py-4">
        <nav class="flex items-center gap-2 text-sm">
          <a href={`/${storeUrl}`} class="text-stone-500 hover:text-stone-700 transition-colors">
            {store.name}
          </a>
          <svg class="w-4 h-4 text-stone-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
          {categoryName && (
            <>
              <span class="text-stone-500">{categoryName}</span>
              <svg class="w-4 h-4 text-stone-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </>
          )}
          <span class="text-stone-900 font-medium truncate">{product.name}</span>
        </nav>
      </div>
    </div>

    {/* Contenido principal */}
    <div class="max-w-6xl mx-auto px-4 sm:px-6 py-8 sm:py-12">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12">
        
        {/* Imagen */}
        <div class="relative">
          <div class="aspect-square bg-white rounded-3xl overflow-hidden shadow-sm border border-stone-100">
            {product.image_url ? (
              <img 
                src={product.image_url}
                alt={product.name}
                class="w-full h-full object-cover"
              />
            ) : (
              <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-stone-50 to-stone-100">
                <svg class="w-32 h-32 text-stone-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
            )}
          </div>

          {/* Badge agotado */}
          {product.stock === 0 && (
            <div class="absolute inset-0 rounded-3xl bg-stone-900/70 flex items-center justify-center backdrop-blur-sm">
              <span class="text-white font-bold text-xl bg-red-500 px-6 py-3 rounded-full">Agotado</span>
            </div>
          )}

          {/* Categoría */}
          {categoryName && (
            <span class="absolute top-4 left-4 bg-white/90 backdrop-blur-sm text-stone-600 font-medium px-4 py-2 rounded-full shadow-lg">
              {categoryName}
            </span>
          )}
        </div>

        {/* Detalles */}
        <div class="flex flex-col">
          <h1 class="text-3xl sm:text-4xl font-black text-stone-900 leading-tight">
            {product.name}
          </h1>

          <p class="text-4xl sm:text-5xl font-black text-stone-900 mt-4">
            ${product.price.toLocaleString()}
          </p>

          {/* Stock */}
          <div class="mt-6 flex items-center gap-2">
            {product.stock > 0 ? (
              <>
                <span class="w-3 h-3 bg-emerald-500 rounded-full animate-pulse"></span>
                <span class="text-emerald-700 font-medium">
                  {product.stock} {product.stock === 1 ? 'unidad disponible' : 'unidades disponibles'}
                </span>
              </>
            ) : (
              <>
                <span class="w-3 h-3 bg-red-500 rounded-full"></span>
                <span class="text-red-600 font-medium">Sin stock</span>
              </>
            )}
          </div>

          {/* Descripción */}
          {product.description && (
            <div class="mt-8">
              <h2 class="text-sm font-semibold text-stone-500 uppercase tracking-wide mb-3">Descripción</h2>
              <p class="text-stone-600 text-lg leading-relaxed whitespace-pre-line">{product.description}</p>
            </div>
          )}

          {/* Acciones */}
          <div class="mt-auto pt-8 space-y-4">
            {product.stock > 0 && store.whatsapp_url && (
              <a
                href={`https://wa.me/${store.whatsapp_url}?text=Hola! Me interesa comprar: ${product.name} ($${product.price.toLocaleString()})`}
                target="_blank"
                class="w-full inline-flex items-center justify-center gap-3 bg-emerald-500 text-white py-4 px-6 rounded-2xl font-bold text-lg hover:bg-emerald-600 transition-all shadow-lg shadow-emerald-500/25 hover:shadow-xl hover:shadow-emerald-500/30 hover:-translate-y-0.5"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                </svg>
                Comprar por WhatsApp
              </a>
            )}

            <a
              href={`/${storeUrl}`}
              class="w-full inline-flex items-center justify-center gap-2 bg-stone-100 text-stone-700 py-4 px-6 rounded-2xl font-semibold hover:bg-stone-200 transition-colors"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
              </svg>
              Volver a la tienda
            </a>
          </div>
        </div>
      </div>

      {/* Productos relacionados */}
      {relatedProducts.length > 0 && (
        <section class="mt-16">
          <h2 class="text-2xl font-bold text-stone-900 mb-6">También te puede interesar</h2>
          <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 sm:gap-6">
            {relatedProducts.map((related) => (
              <a 
                href={`/${storeUrl}/${related.id}`}
                class="group"
              >
                <div class="bg-white rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 overflow-hidden border border-stone-100 hover:border-stone-200">
                  <div class="aspect-square bg-stone-100 relative overflow-hidden">
                    {related.image_url ? (
                      <img 
                        src={related.image_url}
                        alt={related.name}
                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                      />
                    ) : (
                      <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-stone-50 to-stone-100">
                        <svg class="w-12 h-12 text-stone-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                      </div>
                    )}
                    {related.stock === 0 && (
                      <div class="absolute inset-0 bg-stone-900/70 flex items-center justify-center backdrop-blur-sm">
                        <span class="text-white font-semibold bg-red-500 px-2 py-1 rounded-full text-xs">Agotado</span>
                      </div>
                    )}
                  </div>
                  <div class="p-3">
                    <h3 class="font-medium text-stone-900 text-sm leading-tight line-clamp-2">{related.name}</h3>
                    <p class="text-lg font-bold text-stone-900 mt-1">${related.price.toLocaleString()}</p>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </section>
      )}
    </div>

    {/* Footer */}
    <footer class="py-8 text-center border-t border-stone-200 bg-white mt-12">
      <a href={`/${storeUrl}`} class="text-stone-500 hover:text-stone-700 font-medium transition-colors">
        ← Volver a {store.name}
      </a>
    </footer>
  </div>
</PublicLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
