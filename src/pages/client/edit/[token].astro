---
import PublicLayout from '../../../layouts/PublicLayout.astro';
import { supabase } from '../../../lib/supabase';

const { token } = Astro.params;

// Buscar cliente por edit_token
let client = null;
let store = null;

if (token) {
  const { data: clientData } = await supabase
    .from('clients')
    .select(`
      *,
      stores (
        id,
        name,
        slug,
        store_type,
        whatsapp_url,
        profile_image_url
      )
    `)
    .eq('edit_token', token)
    .single();

  if (clientData) {
    client = clientData;
    store = clientData.stores;
  }
}

if (!client || !store) {
  return Astro.redirect('/404');
}
---

<PublicLayout title={`Editar Perfil - ${store.name}`} store={{ name: store.name, slug: store.slug, id: store.id, whatsapp_url: store.whatsapp_url, store_type: store.store_type, user_id: '', profile_image_url: store.profile_image_url }}>
  <div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-2xl mx-auto">
      <div class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 px-6 py-8">
          <h1 class="text-2xl font-bold text-white mb-2">Editar Mi Perfil</h1>
          <p class="text-indigo-100">Actualizá tu información de contacto</p>
        </div>

        <div class="p-6 sm:p-8">
          <form id="edit-client-form" class="space-y-6">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
              <div>
                <label for="first_name" class="block text-sm font-medium text-gray-700 mb-2">
                  Nombre <span class="text-red-500">*</span>
                </label>
                <input
                  type="text"
                  id="first_name"
                  name="first_name"
                  value={client.first_name}
                  required
                  class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100"
                />
              </div>

              <div>
                <label for="last_name" class="block text-sm font-medium text-gray-700 mb-2">
                  Apellido
                </label>
                <input
                  type="text"
                  id="last_name"
                  name="last_name"
                  value={client.last_name || ''}
                  class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100"
                />
              </div>
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                Email
              </label>
              <input
                type="email"
                id="email"
                name="email"
                value={client.email || ''}
                class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100"
              />
            </div>

            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                Teléfono
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                value={client.phone || ''}
                class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100"
              />
            </div>

            <div>
              <label for="location" class="block text-sm font-medium text-gray-700 mb-2">
                Localidad
              </label>
              <input
                type="text"
                id="location"
                name="location"
                value={client.location || ''}
                class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100"
              />
            </div>

            <div id="form-message" class="hidden p-4 rounded-xl"></div>

            <div class="flex gap-3 pt-4">
              <button
                type="submit"
                id="save-button"
                class="flex-1 px-6 py-3 bg-indigo-600 text-white rounded-xl font-semibold hover:bg-indigo-700 transition-colors shadow-lg shadow-indigo-200"
              >
                Guardar Cambios
              </button>
              <a
                href={`/${store.slug || store.id}`}
                class="px-6 py-3 bg-gray-100 text-gray-700 rounded-xl font-semibold hover:bg-gray-200 transition-colors"
              >
                Volver
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</PublicLayout>

<script define:vars={{ storeSlug: store.slug, storeId: store.id }}>
  const form = document.getElementById('edit-client-form');
  const messageDiv = document.getElementById('form-message');
  const saveButton = document.getElementById('save-button');

  if (form && messageDiv && saveButton) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(form);
      const data = {
        first_name: formData.get('first_name'),
        last_name: formData.get('last_name') || null,
        email: formData.get('email') || null,
        phone: formData.get('phone') || null,
        location: formData.get('location') || null
      };

      saveButton.disabled = true;
      saveButton.textContent = 'Guardando...';

      try {
        const response = await fetch(`/api/clients/update-by-token`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            token: window.location.pathname.split('/').pop(),
            ...data
          })
        });

        const result = await response.json();

        if (response.ok) {
          messageDiv.className = 'p-4 rounded-xl bg-green-50 text-green-700 border border-green-200';
          messageDiv.textContent = '✅ Tus datos se actualizaron correctamente';
          messageDiv.classList.remove('hidden');
          
          setTimeout(() => {
            window.location.href = `/${storeSlug || storeId}`;
          }, 2000);
        } else {
          throw new Error(result.error || 'Error al guardar');
        }
      } catch (error) {
        messageDiv.className = 'p-4 rounded-xl bg-red-50 text-red-700 border border-red-200';
        messageDiv.textContent = 'Error: ' + error.message;
        messageDiv.classList.remove('hidden');
      } finally {
        saveButton.disabled = false;
        saveButton.textContent = 'Guardar Cambios';
      }
    });
  }
</script>
