---
import Layout from '../layouts/Layout.astro';

// Aquí podrías obtener los datos del producto desde tu backend o CMS
const producto = {
    nombre: "Nombre del Producto",
    precio: 99.99,
    descripcion: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.",
    caracteristicas: [
        "Característica 1",
        "Característica 2",
        "Característica 3"
    ],
    stock: 10,
    categoria: "Categoría"
};
---

<Layout title={producto.nombre}>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Galería de Imágenes -->
            <div class="space-y-4">
                <div class="aspect-w-1 aspect-h-1 bg-gray-200 rounded-lg overflow-hidden">
                    <img 
                        src="https://ralfvanveen.com/wp-content/uploads/2021/06/Placeholder-_-Glossary.svg" 
                        alt={producto.nombre}
                        class="w-full h-full object-center object-cover"
                    />
                </div>
                <div class="grid grid-cols-4 gap-4">
                    <div class="aspect-w-1 aspect-h-1 bg-gray-200 rounded-lg overflow-hidden">
                        <img src="https://ralfvanveen.com/wp-content/uploads/2021/06/Placeholder-_-Glossary.svg" alt="" class="w-full h-full object-center object-cover cursor-pointer hover:opacity-75" />
                    </div>
                    <!-- Repite para más imágenes en miniatura -->
                </div>
            </div>

            <!-- Información del Producto -->
            <div class="space-y-6">
                <div class="space-y-2">
                    <p class="text-sm text-indigo-600 font-medium">{producto.categoria}</p>
                    <h1 class="text-3xl font-bold text-gray-900">{producto.nombre}</h1>
                    <p class="text-2xl font-bold text-gray-900">${producto.precio}</p>
                </div>

                <div class="border-t border-b border-gray-200 py-4">
                    <p class="text-gray-700">{producto.descripcion}</p>
                </div>

                <!-- Características -->
                <div class="space-y-4">
                    <h3 class="text-lg font-medium text-gray-900">Características</h3>
                    <ul class="list-disc list-inside space-y-2">
                        {producto.caracteristicas.map(caracteristica => (
                            <li class="text-gray-700">{caracteristica}</li>
                        ))}
                    </ul>
                </div>

                <!-- Opciones de Compra -->
                <div class="space-y-4">
                    <div class="flex items-center space-x-4">
                        <label for="cantidad" class="text-sm font-medium text-gray-700">Cantidad</label>
                        <select id="cantidad" class="rounded-md border-gray-300 py-2 px-4 focus:ring-indigo-500 focus:border-indigo-500">
                            {Array.from({length: producto.stock}, (_, i) => i + 1).map(num => (
                                <option value={num}>{num}</option>
                            ))}
                        </select>
                        <span class="text-sm text-gray-500">{producto.stock} disponibles</span>
                    </div>

                    <div class="flex space-x-4">
                        <button class="flex-1 bg-indigo-600 text-white px-6 py-3 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                            Agregar al Carrito
                        </button>
                        <button class="flex-1 bg-gray-200 text-gray-700 px-6 py-3 rounded-md hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2">
                            Comprar Ahora
                        </button>
                    </div>
                </div>

                <!-- Información Adicional -->
                <div class="space-y-4 border-t border-gray-200 pt-4">
                    <div class="flex items-center space-x-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                        <span class="text-sm text-gray-700">Envío gratis en compras mayores a $999</span>
                    </div>
                    <div class="flex items-center space-x-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <span class="text-sm text-gray-700">Garantía de 30 días</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>
